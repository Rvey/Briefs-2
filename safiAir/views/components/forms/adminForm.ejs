                    focus:outline-none focus:ring-2
                  "
                  type="time"
                  name="ArrivingTime"
                />
              </div>
            </div>

            <!-- select direction -->
            <div class="mb-4 flex gap-6">
              <div class="md:ml-2 w-full">
                <label
                  class="block mb-2 text-sm font-bold text-gray-700"
                  for="c_password"
                >
                  where From ?
                </label>
                <select
                  class="
                    selectTo
                    w-full
                    px-3
                    py-2
                    mb-3
                    text-sm
                    leading-tight
                    text-gray-700
                    border
                    rounded
                    cursor-pointer
                    appearance-none
                    focus:outline-none focus:ring-2
                  "
                  value=""
                  name=""
                  id=""
                >
                  <option value="safi">safi</option>
                  <option value="tanger">tanger</option>
                  <option value="essaouira">essaouira</option>
                </select>
              </div>

              <div class="md:ml-2 w-full">
                <label
                  class="block mb-2 text-sm font-bold text-gray-700"
                  for="c_password"
                >
                  where To ?
                </label>
                <select
                  class="
                    selectFrom
                    w-full
                    px-3
                    py-2
                    mb-3
                    text-sm
                    leading-tight
                    text-gray-700
                    border
                    rounded
                    cursor-pointer
                    appearance-none
                    focus:outline-none focus:ring-2
                  "
                  name=""
                  id=""
                >
