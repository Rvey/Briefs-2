      <!-- Col -->
      <div class="w-full px-5 rounded-lg lg:rounded-l-none">
        <form
          class="
            flex flex-col
            justify-between

            mb-4
            
            rounded
            adminForm
            h-full
          "
        >
          <div>
            <div class="mb-4 flex">
              <div class="mb-4 md:mr-2 md:mb-0">
                <label
                  class="block mb-2 text-sm font-bold text-gray-700"
                  for="firstName"
                >
                  Flight code
                </label>
                <input
                  class="
                    w-full
                    px-3
                    py-2
                    text-sm
                    leading-tight
                    text-gray-700
                    border
                    rounded
                    cursor-pointer
                    appearance-none
                    focus:outline-none focus:ring-2
