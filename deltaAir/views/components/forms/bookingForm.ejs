<script>
  const userForm = document.querySelector(".userForm");
  const modal = document.querySelector(".modal");
  const book = document.querySelector(".book");
  const cancel = document.querySelector(".cancel");
  const planID = JSON.parse(sessionStorage.getItem("selectedFlight"));
  const seat = JSON.parse(sessionStorage.getItem("seats"));
  const planSeats = JSON.parse(sessionStorage.getItem("flightSeats"));
  const hotel = document.querySelector(".hotel");
  const spa = document.querySelector(".spaForm");

  const from = document.querySelector('.from')
  const to = document.querySelector('.to')
  const date_departure = document.querySelector('.date-to')
  const date_arrival = document.querySelector('.date-to')
  const email = document.querySelector('.email')


  fetch(`http://localhost:5000/api/plan/${planID}`)
    .then((response) => response.json())
    .then((data) => {
      from.value = data.from
      to.value = data.where
      date_departure.value = data.departure_date
      date_arrival.value = data.arrival_date

    })

  userForm.addEventListener("submit", (e) => {
    e.preventDefault();
    modal.classList.remove("hidden");
    // location.replace('/ticket')

  });

  cancel.addEventListener("click", (e) => {
    e.preventDefault();
    modal.classList.add("hidden");
  });
  book.addEventListener("click", (e) => {
    e.preventDefault();
    const user = {
      fname: userForm.fname.value,
      lname: userForm.lname.value,
      email: userForm.email.value,
      phone: userForm.phone.value,
      seats: seat,
      planID: planID,
      hotel: hotel.value,
      spa: spa.Spa.value,
    };
    const ticket = {
      from: from.value,
      to: to.value , 
      departure_date : date_departure.value , 
      arrival_date : date_arrival.value , 
      email : userForm.email.value
    }
    const seats = {
      seats: JSON.stringify(parseInt(planSeats - seat))
    }
    fetch("http://localhost:5000/api/user", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(user),
      })
      .then(() => {
        fetch(`http://localhost:5000/api/plan/${planID}`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(seats),
        });
      })
      .then(() => modal.classList.add("hidden"))
      .then(() => {

        fetch("http://localhost:5000/api/ticket", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(ticket),
        })
      }
        )
        .then(() => location.replace('/'));
  });
</script>
